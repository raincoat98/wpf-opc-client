<Window x:Class="WpfSamterOpcClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WpfSamterOpcClient"
        mc:Ignorable="d" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="SamterOpcClient" Loaded="MainWindow_Loaded">
    <Grid Background="#f5f5fd">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="130"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="ServerURL" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Center" FontSize="20"/>
            <TextBox x:Name="TbServerURLValue" HorizontalAlignment="Left" Margin="155,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="280" FontSize="20" Cursor="IBeam"/>
            <Button x:Name="BtConnectValue" Content="Connect" HorizontalAlignment="Left" Margin="450,37,0,0" VerticalAlignment="Top" Click="btnConnect_Click"/>
            <Button x:Name="BtDisConnectValue" Content="DisConnect" HorizontalAlignment="Left" Margin="545,37,0,0" VerticalAlignment="Top" Background="#444" IsEnabled="False" Click="btnDisConnect_Click"  />
            <Label x:Name="LbConnectStatusValue" Content="Not Connected" HorizontalAlignment="Left" Margin="665,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.519,1.128"/>
        </Grid>
        <Grid Grid.Row="1" >

            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="50, 0, 50, 15" >
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontSize="18" Text="ORDER ID: "/>
                        <TextBlock x:Name="TbOrderIdValue" FontWeight="SemiBold" FontSize="18" Text="0" />
                    </StackPanel>
                    <Button x:Name="BtOorderComplate" Content="order Complate" Margin="20, 0, 0, 0" Visibility="Hidden" Click="BtOorderComplate_Click"/>
                </StackPanel>

                <WrapPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Margin="20 0" CornerRadius="15">
                        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                         Width="150" Height="110" >
                            <StackPanel Margin="20" HorizontalAlignment="Center">
                                <TextBlock FontSize="14" Text="STATUS" HorizontalAlignment="Center" Foreground="#444" />
                                <TextBlock x:Name="TbStatusValue" FontWeight="SemiBold" FontSize="25" Text="STOP" Margin="0 10 0 0" Foreground="#FF0000" />
                            </StackPanel>
                        </materialDesign:Card>
                    </Border>
                    <Border Margin="20 0" CornerRadius="15">
                        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                                         Width="150" Height="110" Background="#FFF">
                            <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock FontSize="14" Text="SPEED" HorizontalAlignment="Center" Foreground="#444" />
                                <TextBlock x:Name="TbSpeedValue" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="25" Text="0" Margin="0 10 0 0" Foreground="#444" />
                            </StackPanel>
                        </materialDesign:Card>
                    </Border>
                    <Border Margin="20 0" CornerRadius="15">
                        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                                         Width="250" Height="110" Background="#FFF">
                            <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">

                                <TextBlock FontSize="14" Text="Quantity/OrderQuantity" Foreground="#444" />
                                <StackPanel  Margin="0 10 0 0" Orientation="Horizontal"  HorizontalAlignment="Center">
                                    <TextBlock x:Name="TbQuantityValue" FontWeight="SemiBold" FontSize="25" Text="0" Foreground="#444"/>
                                    <TextBlock FontWeight="SemiBold" FontSize="15" Text="/" Margin="0 10 0 0" Foreground="#444" />
                                    <TextBlock x:Name="TbOrderQuantityValue" FontWeight="SemiBold" FontSize="15" Text="0" Margin="0 10 0 0" Foreground="#444"/>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </Border>

                </WrapPanel>
            </StackPanel>
 

        </Grid>
        <Grid Grid.Row="2">
            <StackPanel>
                <Label Content="LOG"/>
                <ListView d:ItemsSource="{d:SampleData ItemCount=2}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3">
            <Label HorizontalAlignment="Right"  VerticalAlignment="center">
                <CheckBox Content="AutoConnect"/>
            </Label>
        </Grid>
    </Grid>
</Window>
